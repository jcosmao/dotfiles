export PATH="$HOME/.local/bin:/usr/local/bin:$PATH"

# Download Znap, if it's not there yet.
if [[ ! -f ~/.znap/zsh-snap/znap.zsh ]]; then
    mkdir -p ~/.znap
    git clone https://github.com/marlonrichert/zsh-snap.git ~/.znap/zsh-snap
fi

source ~/.znap/zsh-snap/znap.zsh  # Start Znap

# `znap source` automatically downloads and installs your plugins.
znap source ohmyzsh/ohmyzsh plugins/wd lib/{history,completion,key-bindings,clipboard}
znap source zsh-users/zsh-completions
znap source zsh-users/zsh-autosuggestions
znap source zsh-users/zsh-syntax-highlighting
# znap source zdharma/fast-syntax-highlighting
znap source 3v1n0/zsh-bash-completions-fallback
znap install bigH/git-fuzzy

for f in $(find ~/.shell/zsh -name '*.zsh'); do
    . $f
done

znap prompt jcosmao/blox-zsh-theme

# ssh-agent ~/.bash/functions
if declare -f launch_ssh_agent &> /dev/null; then
    launch_ssh_agent
fi

# Set LS_COLORS
[[ -x $(which dircolors) ]] && eval $(dircolors -b $HOME/.dir_colors)

# completion color
zstyle ':completion:*' list-colors "${(@s.:.)LS_COLORS}"
fpath=($fpath ~/.znap/ohmyzsh/plugins/wd)

# if we SSH then autolaunch default tmux session
#if [[ -n $SSH_TTY && -z $TMUX ]]; then
#    tm default
#fi
